=provide(:title,"Sign up")
%h2.text-center Sign up
.container
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ :id => 'user-sign-up'}) do |f|
    = f.error_notification
    .form-group
      = f.input :name, label: 'Name', required: true, autofocus: true
    .form-group
      = f.input :email, label: 'Email', required: true, autofocus: true
    .form-group
      = f.input :password, label: 'Password', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
    .form-group
      = f.input :password_confirmation,label: 'Confirmation', required: true
    = f.button :submit, "Sign up",class: 'btn btn-primary'
    = render "devise/shared/links"

