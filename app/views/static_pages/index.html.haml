= provide(:title,'Welcome!')
.jumbotron
  - if user_signed_in? && !current_user.admin?
    %h1 Hello, #{current_user.name}!
    %p
      Welcome to "Lunch ordering".
    = link_to('Menu', menu_path, :class => 'btn btn-success')
  -elsif user_signed_in? && current_user.admin?
    %h1 Hello, admin #{current_user.name}!
    %p
      You can browse at users' orders
    = link_to('Orders', admin_orders_path, :class => 'btn btn-success')
  - else
    %h1 Hello!
    %p
      Welcome to "Lunch ordering".
    = link_to('Sign in', sign_in_path, :class => 'btn btn-success')

